{
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ES5",
      "ES2015.Collection",
      "ES2015.Iterable",
      "ES2016.Array.Include"
    ],
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ]
}
